root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,vue,scss,css,sass,php,yml,yaml,neon,twig}]
indent_size = 4

[*.json]
insert_final_newline = ignore

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
